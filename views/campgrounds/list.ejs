<% include ../partials/header %>

    <header class="jumbotron">
        <div class="container">
            <h1>Welcom to YelpCamp!</h1>
            <p>View all hand-picker campground form all over thr world</p>
            <p>
                <a class="btn btn-primary btn-large" href="/campgrounds/new">Create a new campground</a>
            </p>
        </div>
    </header>

    <div class="row">
        <div class="col-lg-12">
            <h3>Our most popular Campgrounds!</h3>
        </div>
    </div>

    <div class="row" style="display: flex; flex-wrap: wrap;">
        <% model.forEach(item=>{ %>
            <div class="col-lg-3 col-md-4 col-sm-6">
                <div class="img-thumbnail">
                    <img width="100%" src="<%= item.image%>" />
                    <div class="caption">
                        <h4>
                            <%= item.name %>
                        </h4>
                    </div>
                </div>
            </div>
            <% }) %>
    </div>
    <% include ../partials/footer %>