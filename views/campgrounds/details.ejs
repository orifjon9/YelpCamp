<% include ../partials/header %>

    <div class="row">
        <div class="col-md-3">
            <p class="lead">YelpCamp</p>
            <div class="list-group">
                <li class="list-group-item active">Item 1</li>
                <li class="list-group-item">Item 2</li>
                <li class="list-group-item">Item 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <div class="img-responsive"><img src="<%=model.image%>" width="100%" /></div>
                <div class="caption-full">
                    <h4 class="pull-right">$9.00/night</h4>
                    <h4>
                        <%=model.name%>
                    </h4>
                    <p>
                        <%=model.description%>
                    </p>
                    <p>
                        <em> Submitted By:
                        <%=model.author.username %></em>
                    </p>
                </div>
                <a class="btn btn-lg btn-primary" href="/campgrounds/<%=model._id%>/edit">Edit</a>

                <form id="delete" action="/campgrounds/<%=model._id%>?_method=DELETE" method="POST">
                    <button class="btn btn-lg btn-danger">Delete</button>
                </form>
            </div>


            <div class="well">
                <div class="text-right">
                    <a class="btn btn-lg btn-success" href="/campgrounds/<%=model._id%>/comments/new">Leave Comment</a>
                </div>
                <hr>
                <% model.comments.forEach(comment => { %>
                    <div class="row">
                        <div class="col-md-12">
                            <strong><%= comment.author.username%></strong>
                            <span class="pull-right">10 days</span>
                            <p>
                                <%= comment.text %>
                            </p>
                        </div>
                    </div>

                    <%}) %>
            </div>
        </div>
    </div>