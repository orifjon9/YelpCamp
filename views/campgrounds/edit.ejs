<% include ../partials/header %>
    <div class="row">
        <h1>Edit the campground</h1>
        <div class="col-md-4">
            <form action="/campgrounds/<%=model._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="campground[name]" placeholder="Name" value="<%=model.name %>" />
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="campground[image]" placeholder="Image URL" value="<%=model.image %>" />
                </div>
                <div class="form-group">
                    <textarea class="form-control" type="text" name="campground[description]" rows="5" placeholder="Description"><%=model.description %></textarea>
                </div>
                <div class="form-group">
                    <input class="btn btn-primary btn-block btn-lg" type="submit" value="Submit" />
                </div>
            </form>
            <a href="/campgrounds/<%=model._id %>">Go back</a>
        </div>
    </div>