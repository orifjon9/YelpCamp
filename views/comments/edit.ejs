<% include ../partials/header %>

    <div class="row">
        <h1>Edit comment
        </h1>
        <div class="col-md-4">
            <form action="/campgrounds/<%= campgroundId%>/comments/<%=comment._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="text" value="<%=comment.text%>" />
                </div>
                <div class="form-group">
                    <input class="btn btn-primary btn-block btn-lg" type="submit" value="Submit" />
                </div>
            </form>
            <a href="/campgrounds/<%= campgroundId%>">Go back</a>
        </div>
    </div>
    <% include ../partials/footer %>