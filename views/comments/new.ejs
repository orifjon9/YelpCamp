<% include ../partials/header %>

    <div class="row">
        <h1>Add new comment to
            <%= model.name%>
        </h1>
        <div class="col-md-4">
            <form action="/campgrounds/<%= model._id%>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="text" />
                </div>
                <div class="form-group">
                    <input class="btn btn-primary btn-block btn-lg" type="submit" value="Submit" />
                </div>
            </form>
            <a href="/campgrounds/<%= model._id%>">Go back</a>
        </div>
    </div>
    <% include ../partials/footer %>